{
  "name": "github-status",
  "displayName": "GitHub Status",
  "description": "Extension for VS Code provides real-time information about the availability and performance of GitHub services",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "RuslanRystsov",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueRexPY/GitHubStatus.git"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "keywords": [
    "github",
    "status",
    "availability",
    "performance",
    "crash"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitHubStatus.update",
        "title": "GitHub Status: Hard refresh ðŸ”„"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "github-status",
          "name": "GitHub Status"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "github-status",
          "title": "GitHub Status",
          "icon": "images/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "GitHub Status",
      "properties": {
        "githubStatus.refreshInterval": {
          "type": "number",
          "default": 5,
          "description": "Refresh interval in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "minor": "pnpm vsce publish minor --no-dependencies",
    "major": "pnpm vsce publish major --no-dependencies",
    "patch": "pnpm vsce publish patch --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^0.24.0"
  }
}